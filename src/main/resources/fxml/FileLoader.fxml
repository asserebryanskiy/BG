<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="badgegenerator.fileloader.FileLoaderController">
   <children>
      <GridPane fx:id="commonGrid" vgap="5.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label alignment="CENTER" layoutX="72.0" layoutY="37.0" nodeOrientation="LEFT_TO_RIGHT" text="Привет! Загрузи сюда свои файлы" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
            <HBox spacing="20.0" GridPane.columnSpan="2" GridPane.halignment="LEFT" GridPane.rowIndex="5" GridPane.valignment="TOP">
               <children>
                  <Button fx:id="btnBrowsePdf" alignment="TOP_LEFT" layoutX="24.0" layoutY="174.0" mnemonicParsing="false" onMouseClicked="#handleBrowsePdf" text="Обзор" GridPane.rowIndex="5" />
                  <VBox>
                     <children>
                        <TextField fx:id="pdfField" editable="false" prefHeight="27.0" prefWidth="218.0">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                        <Text fx:id="pdfNotLoadedLabel" fill="#eb0000" strokeType="OUTSIDE" strokeWidth="0.0" text="Необходимо загрузить pdf документ с макетом" visible="false" wrappingWidth="210.0">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox spacing="20.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="TOP">
               <children>
                  <Button fx:id="btnBrowseXlsx" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#handleBrowseXlsx" text="Обзор" GridPane.rowIndex="2">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <VBox>
                     <children>
                        <TextField editable="false" prefHeight="27.0" prefWidth="218.0" fx:id="xlsxField" />
                        <Text fill="#f20000" strokeType="OUTSIDE" strokeWidth="0.0" text="Необходимо загрузить xlsx документ с данными об участниках" visible="false" wrappingWidth="210.0" fx:id="xlsxNotLoadedLabel">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <CheckBox fx:id="hasHeadingsCheckBox" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#handleSetHasHeadings" text="Первая строка - заголовки" GridPane.rowIndex="3" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </CheckBox>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="28.0" layoutY="140.0" text="Макет в формате .pdf" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <GridPane.margin>
                  <Insets top="10.0" />
               </GridPane.margin>
            </Label>
            <Label layoutX="20.0" layoutY="79.0" text="Список участинков мероприятия в формате .xlsx" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <GridPane fx:id="proceedGrid" GridPane.rowIndex="6">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Button fx:id="btnCreateNewFields" layoutX="265.0" layoutY="260.0" mnemonicParsing="false" onMouseClicked="#handleProceed" text="Создать новые поля" AnchorPane.bottomAnchor="20.0" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                  </Button>
                  <Button fx:id="btnLoadFields" mnemonicParsing="false" onAction="#handleOpenSavedFieldsScreen" text="Загрузить поля" />
               </children>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </GridPane>
      <Rectangle fx:id="progressIndicatorBackground" arcHeight="5.0" arcWidth="5.0" fill="#ffffffa3" height="278.0" stroke="WHITE" strokeType="INSIDE" visible="false" width="357.0" />
      <ProgressIndicator fx:id="progressIndicator" visible="false">
         <StackPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </StackPane.margin>
      </ProgressIndicator>
   </children>
</StackPane>
