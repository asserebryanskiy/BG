            <ColumnConstraints halignment="LEFT" minWidth="0.0" />
            <ColumnConstraints hgrow="SOMETIMES" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints maxHeight="106.0" minHeight="0.0" />
            <RowConstraints maxHeight="160.0" minHeight="2.9440317153930664" />
            <RowConstraints maxHeight="173.18446159362793" minHeight="1.3192596435546875" />
            <RowConstraints maxHeight="171.86979293823242" minHeight="18.314678192138672" />
            <RowConstraints fillHeight="false" maxHeight="182.55511474609375" minHeight="0.0" />
            <RowConstraints fillHeight="false" />
            <RowConstraints minHeight="10.0" />
         </rowConstraints>
         <children>
            <StackPane fx:id="editingArea" GridPane.halignment="LEFT" GridPane.hgrow="NEVER" GridPane.rowSpan="8" GridPane.valignment="TOP" GridPane.vgrow="NEVER">
