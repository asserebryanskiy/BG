<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="badgegenerator.fxfieldsloader.FxFieldsLoaderController">
   <children>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="130.0" prefWidth="294.0">
         <children>
            <ListView fx:id="savedFields" fixedCellSize="25.0" prefHeight="240.0" prefWidth="200.0" />
            <VBox fx:id="btnBox" alignment="TOP_CENTER" spacing="5.0">
               <children>
                  <Button fx:id="loadFieldBtn" mnemonicParsing="false" onAction="#handleLoadField" prefWidth="90.0" text="Загрузить" />
                  <Button fx:id="loadNewFieldsBtn" mnemonicParsing="false" onAction="#handleLoadNewFields" prefWidth="90.0" text="Создать&#10;новые&#10;бейджи" textAlignment="CENTER" /></children>
               <padding>
                  <Insets left="5.0" right="5.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <StackPane fx:id="loaderScreen" visible="false">
         <children>
            <Rectangle fx:id="loaderBackground" arcHeight="5.0" arcWidth="5.0" fill="#ffffff80" height="130.0" stroke="TRANSPARENT" strokeType="INSIDE" width="295.0" />
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <ProgressBar fx:id="progressBar" prefWidth="200.0" />
                  <Text fx:id="loaderMessage" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</StackPane>
