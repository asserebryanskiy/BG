<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="badgegenerator.fxfieldsloader.FxFieldsLoaderController">
   <children>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="130.0" prefWidth="294.0">
         <children>
            <ListView fx:id="savedFields" fixedCellSize="25.0" prefHeight="240.0" prefWidth="200.0" />
            <VBox alignment="TOP_CENTER" spacing="5.0">
               <children>
                  <Button fx:id="loadFieldBtn" mnemonicParsing="false" onAction="#handleLoadField" prefWidth="90.0" text="Загрузить" />
                  <Button fx:id="loadNewFieldsBtn" mnemonicParsing="false" onAction="#handleLoadNewFields" prefWidth="90.0" text="Создать&#10;новые" textAlignment="CENTER" />
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <Rectangle fx:id="loaderBackground" arcHeight="5.0" arcWidth="5.0" fill="#ffffff80" height="130.0" stroke="TRANSPARENT" strokeType="INSIDE" visible="false" width="295.0" />
      <ProgressBar fx:id="progressBar" prefWidth="200.0" visible="false" />
   </children>
</StackPane>
